{
  "name": "budgetcalculator",
  "version": "1.0.0",
  "description": "a simple budget, income and expenses, calculator",
  "main": "index.js",
  "scripts": {
    "start": "npm-run-all --parallel build:js build:css bsync",
    "bsync": "browser-sync start --server --files 'docs/index.html' 'dist/assets/js/*.js' 'dist/assets/scss/*.scss' --no-inject-changes",
    "build:css": "node-sass -o docs/assets/css dist/assets/scss/style.scss --output-style compressed",
    "build:js": "uglifyjs dist/assets/js/main.js -o docs/assets/js/scripts.min.js"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "browser-sync": "^2.26.12",
    "concat": "^1.0.3",
    "node-sass": "^6.0.0",
    "npm-run-all": "^4.1.5",
    "uglify-js": "^3.13.9"
  }
}
